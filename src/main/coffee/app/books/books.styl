.loginBox
  max-width: 90%
  width: 500px

.stretch input
  width: 100%

.book
  width: 150px
  border: 1px solid silver
  padding: 2px
  margin: 2px

.face
  border-radius: 50px
  border: 1px solid silver
  box-shadow: 2px 2px 1px silver
  width: 100px
  height: 100px
  margin: 1px

.books
  padding-bottom: 50px

  a
    color: #000
    text-decoration: none

  a:visited
    color: rgba(0, 0, 0, .5)

  h1
    font-size: 320%
    margin-bottom: 30px

  h2
    opacity:.8

  p
    font-size: 80%
    opacity: .5

  h1, h2, h3, h4
    font-weight: 100
    margin: 0
    padding: 0

  img
    height: auto
    max-width: 100%

  .animation-fade
    opacity: 0

  .animation-faded
    opacity: 1

  .animation-faded
    -webkit-transition: opacity 1s linear .2s
    -moz-transition: opacity 1s linear .2s
    -o-transition: opacity 1s linear .2s
    transition: opacity 1s linear .2s

  .image-round
    border-radius: 50%

  .clearfix:before, .clearfix:after
    content: " "
    display: table

  .clearfix:after
    clear: both

  .deckgrid
    padding: 10px

  .deckgrid[deckgrid]::before
    content: '4 .column.size-1-4'
    font-size: 0
    visibility: hidden

  .deckgrid .column
    float: left

  .photo
    background: #fff url(images/spinner.gif) center 30px no-repeat
    border: 1px solid rgba(0, 0, 0, .15)
    border-radius: 3px
    margin: 0 10px 10px 0
    position: relative

  .photo .photo-index
    background: rgba(0, 0, 0, .9)
    color: #fff
    position: absolute
    height: 100%
    text-align: center
    width: 100%
    z-index: 99

  .photo .photo-index p:first-child
    margin-top: 10px

  .photo .photo-wrapper
    min-height: 60px

  .photo .photo-description
    padding: 15px

  .deckgrid .column.size-1-5
    width: 200px

  .deckgrid .column.size-1-4
    width: 250px

  .deckgrid .column.size-1-3
    width: 250px

  .deckgrid .column.size-1-2
    width: 250px

  .deckgrid .column.size-1-1
    width: 280px
    

@media screen and (max-width: 1000px)
  .books
    .deckgrid
      width: 800px

    .deckgrid[deckgrid]::before
      content: '4 .column.size-1-4'

@media screen and (max-width: 840px)
  .books  
    .deckgrid
      width: 760px

    .deckgrid[deckgrid]::before
      content: '3 .column.size-1-3'


@media screen and (min-width: 481px) and (max-width: 768px)
  .books
    .deckgrid
      width: 500px

    .deckgrid[deckgrid]::before
      content: '2 .column.size-1-2'

@media only screen and (max-device-width : 320px),
       only screen and (max-width : 480px) 
  .books
    .deckgrid
      width: 280px
      
    .deckgrid[deckgrid]::before
      content: '1 .column.size-1-1'