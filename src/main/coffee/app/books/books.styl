.animation-fade
  opacity: 0

.animation-faded
  opacity: 1

.animation-faded
  -webkit-transition: opacity 1s linear .2s
  -moz-transition: opacity 1s linear .2s
  -o-transition: opacity 1s linear .2s
  transition: opacity 1s linear .2s

.books
  padding-bottom: 50px

  a
    color: #000
    text-decoration: none

  a:visited
    color: rgba(0, 0, 0, .5)

  h1
    font-size: 320%
    margin-bottom: 30px

  h2
    opacity:.8

  p
    font-size: 80%
    opacity: .5

  h1, h2, h3, h4
    font-weight: 100
    margin: 0
    padding: 0

  img
    height: auto
    max-width: 100%

  .image-round
    border-radius: 50%

  .deckgrid[deckgrid]::before
    content: '5 .column.size-1-5'
    font-size: 0
    visibility: hidden

  .book
    background: #fff url(images/spinner.gif) center 30px no-repeat
    border: 1px solid rgba(0, 0, 0, .15)
    border-radius: 3px
    margin: 0 10px 10px 0
    position: relative

    .book-index
      background: rgba(0, 0, 0, .9)
      color: #fff
      position: absolute
      height: 100%
      text-align: center
      width: 100%
      z-index: 99
      
      p:first-child
        margin-top: 10px

    .book-wrapper
      min-height: 60px

    .book-description
      padding: 15px
    

@media screen and (max-width: 1000px)
  .books
    .deckgrid[deckgrid]::before
      content: '5 .column.size-1-5'

@media screen and (max-width: 840px)
  .books  
    .deckgrid[deckgrid]::before
      content: '4 .column.size-1-4'


@media screen and (min-width: 481px) and (max-width: 768px)
  .books
    .deckgrid[deckgrid]::before
      content: '3 .column.size-1-3'

@media only screen and (max-device-width : 320px),
       only screen and (max-width : 480px) 
  .books      
    .deckgrid[deckgrid]::before
      content: '2 .column.size-1-2'